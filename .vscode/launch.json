    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch lua",
            "type": "lua",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/bundle.lua",
            "cwd": "${workspaceFolder}",
            "path": "${workspaceFolder}/?.lua",
            "cpath": "${workspaceFolder}/?.dll",
            "arg": [],
            "consoleCoding": "utf8"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "./example/src/Main.lua",
                "./example/dist/bundle.lua"
            ],
            "program": "${workspaceFolder}\\bin.js"
        }
    ]
}